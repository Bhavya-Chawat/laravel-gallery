# Application Configuration
APP_NAME="Laravel Gallery"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost
VITE_APP_NAME="${APP_NAME}"
APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

# Server Configuration
APP_PORT=80
VITE_PORT=5174

# Application Settings
APP_MAINTENANCE_DRIVER=file
# APP_MAINTENANCE_STORE=database

PHP_CLI_SERVER_WORKERS=4

# Encryption
BCRYPT_ROUNDS=12

# Logging
LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# Database Configuration
DB_CONNECTION=pgsql
DB_HOST=pgsql
DB_PORT=5432
DB_DATABASE=image_gallery
DB_USERNAME=sail
DB_PASSWORD=password

# Session Configuration
SESSION_DRIVER=redis
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

# Broadcasting
BROADCAST_CONNECTION=log

# Filesystem & Queue
FILESYSTEM_DISK=s3
QUEUE_CONNECTION=redis

# Cache Configuration
CACHE_STORE=redis
CACHE_PREFIX=image_gallery_cache

# Memcached
MEMCACHED_HOST=127.0.0.1

# Redis Configuration
REDIS_CLIENT=phpredis
REDIS_HOST=redis
REDIS_PASSWORD=null
REDIS_PORT=6379

# Mail Configuration
MAIL_MAILER=smtp
MAIL_HOST=mailpit
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="hello@image-gallery.local"
MAIL_FROM_NAME="${APP_NAME}"

# MinIO S3-Compatible Storage Configuration
AWS_ACCESS_KEY_ID=sail
AWS_SECRET_ACCESS_KEY=password
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=gallery-images
AWS_USE_PATH_STYLE_ENDPOINT=true
AWS_ENDPOINT=http://minio:9000
AWS_URL=http://localhost:9000

# Gallery Application Settings
GALLERY_MAX_UPLOAD_SIZE=52428800
GALLERY_ALLOWED_MIMES=image/jpeg,image/png,image/webp,image/avif
GALLERY_ALLOWED_EXTENSIONS=jpg,jpeg,png,webp,avif
GALLERY_QUALITY_JPEG=85
GALLERY_QUALITY_WEBP=80

# Docker Port Forwarding
FORWARD_DB_PORT=5432
FORWARD_REDIS_PORT=6379
FORWARD_MINIO_PORT=9000
FORWARD_MINIO_CONSOLE_PORT=8900
FORWARD_MAILPIT_PORT=1025
FORWARD_MAILPIT_DASHBOARD_PORT=8025

# MinIO Root Credentials
MINIO_ROOT_USER=sail
MINIO_ROOT_PASSWORD=password

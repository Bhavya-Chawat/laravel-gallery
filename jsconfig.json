{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@/*": ["resources/js/*"],
            "ziggy-js": ["./vendor/tightenco/ziggy"]
        }
    },
    "include": [
        "resources/js/**/*.js",
        "resources/js/**/*.vue",
        "resources/js/**/*.ts",
        "resources/js/**/*.d.ts"
    ],
    "exclude": ["node_modules", "public"],
    "vueCompilerOptions": {
        "globalTypesPath": "./node_modules/.vue-global-types.d.ts"
    }
}
